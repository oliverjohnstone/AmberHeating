border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

body
  font 18px Helvetica, Arial,sans-serif
  background-image url('/static/img/background.jpg')
  color #fff
  margin 0

.menu
  position fixed
  top 0
  left 0
  width 100%
  height 55px
  background-color rgba(17,17,17,0.85)
  border-bottom solid white 1px
  z-index 10

.menu ul
  position relative
  float right
  list-style-type none
  padding 0
  margin-top 0

.menu li
  float left

.menu li a
  display block
  width 160px
  text-align center
  height 37px
  vertical-align middle
  padding-top 15px

.menu a:link,
.menu a:visited,
.menu a:active
  color #fff
  text-decoration none

.menu li.active
  border-bottom solid white 4px

.content-block
  max-width 750px
  background-color red
  margin 0 auto
  margin-top 40px
  position relative
  text-align center

.content
  position relative
  top 60px